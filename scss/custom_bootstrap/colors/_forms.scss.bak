/* 
    Theme: Pacifica
--  Form colors specific styles
--  Create another file to override these styles if needed
*/

// Global
.form-wrapper
    {
    .form-icon
        {
        color: $secondary-content;
        }
    .form-control.custom-form-control
        {
        color: darken($secondary-content, 50%);
        }
	.form-control
		{
		border-color: darken($containers-borders, 10%);
		&:focus
			{
			border-color: lighten($primary, 40%);
			box-shadow: inset 0 1px 1px change-color($primary, $lightness: 50%, $alpha: 0.2), 0 0 8px change-color($primary, $lightness: 40%, $alpha: 0.5); 
			}
		}
	.form-control[readonly],
	.form-control[disabled]
		{
		background-color: $secondary-background;
		}
	.select2-container--default
		{
		.selection
			{
			.select2-selection--multiple
				{
				border-color: darken($containers-borders, 10%);
				}
			}
		}
	.select2-container--default.select2-container--focus
		{
		.select2-selection--multiple,
		.select2-selection--multiple:focus
			{
			border-color: lighten($primary, 40%);
			box-shadow: inset 0 1px 1px change-color($primary, $lightness: 50%, $alpha: 0.2), 0 0 8px change-color($primary, $lightness: 40%, $alpha: 0.5);
			}
		}
    }

legend 
    {
    color: $body-text;
    }
.toggle.highlight
    {
    border-color: $feedback;
    }

.highlight-selector span
    {
    &:focus
        {
        outline: 0;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102,175,233,.6);
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102,175,233,.6);
        }
    }